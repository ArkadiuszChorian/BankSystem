@model TransferViewModel
@{
    ViewBag.Title = "Transfer";
}
<h1>Transfer</h1>

<form asp-controller="Home" asp-action="Transfer" method="post" asp-route-returnUrl="@ViewData["ReturnUrl"]">
    <div asp-validation-summary="ModelOnly"></div>

    <div>
        <label asp-for="DestinationId">Account number</label>
        <input asp-for="DestinationId" />
        <span asp-validation-for="DestinationId"/>
    </div>

    <div>
        <label>Amount</label>
        <input asp-for="AmountMain" />
        <input asp-for="AmountReminder" />
        <span asp-validation-for="AmountReminder"/>
    </div>
    
    <div>
        <label asp-for="Title"></label>
        <input asp-for="Title" />
        <span asp-validation-for="Title"/>>
    </div>

    <div>
        <input type="submit" value="Transfer" />
    </div>

</form>